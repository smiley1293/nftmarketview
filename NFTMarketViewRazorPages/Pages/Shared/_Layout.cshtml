<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NFTMarketViewRazorPages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NFTMarketViewRazorPages.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="">VantCii NFT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item ">
                            
                        </li>
                        @if (Context.Session.GetInt32("RoleID") == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/NftPictures/Index">
                                    Manage NFT Pictures
                                </a>
                            </li>
                        }
                        @if (Context.Session.GetInt32("RoleID") == 2)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/NftPictures_Customer/Customer_Site">
                                    NFTs
                                </a>
                            </li>
                        }
                        
                        
                    </ul>
                </div>
                <div class="m1-auto">
                    @if (Context.Session.GetInt32("RoleID") != null)
                    {
                        
                        <form method="post" asp-page="/Logout/Logout" id="logoutForm">
                            <button type="submit" class="btn btn-link">Logout</button>
                        </form>
                    }
                </div>
                <div class="m1-auto">
                    @if (Context.Session.GetInt32("RoleID") == null)
                    {

                        <form method="post" asp-page="/Logout/Logout" id="logoutForm">
                            
                            <a class="nav-link" asp-page="/View/Register">Sign up</a>
                        </form>
                    }
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NFTMarketViewRazorPages - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>